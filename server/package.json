{
  "name": "server",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "prod": "bun build --compile --tree-shake --outfile dist/server src/index.ts",
    "prod:win": "bun build --compile --tree-shake --target=bun-windows-x64 --outfile dist/server.exe src/index.ts",
    "prod:linux": "bun build --compile --tree-shake --target=bun-linux-x64-modern --outfile dist/server-linux-x64 src/index.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/static": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@grotto/logysia": "^0.1.6",
    "bcryptjs": "^3.0.3",
    "common": "workspace:*",
    "elysia": "latest",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/pg": "^8.15.5",
    "bun-types": "latest",
    "eslint": "^9.31.0",
    "prettier": "3.6.2"
  },
  "module": "src/index.js"
}

